<%= stylesheet_link_tag 'buttons', :plugin => 'redmine_omniauth_custom' %>

<% if Setting.plugin_redmine_omniauth_custom[:oauth_authentification] %>
  <%= link_to oauth_custom_path(:back_url => back_url) do %>
    <%= button_tag :class => 'button-login' do %>
      <%= image_tag('/plugin_assets/redmine_omniauth_custom/images/custom_login_icon.png', :class => 'button-login-icon', :alt => l(:login_via_custom)) %>
      <%= content_tag :div, l(:login_via_custom), :class => 'button-login-text' %>
    <% end %>
  <% end %>
<% end %>
